// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  profile   String
  username  String
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bag      Product[] @relation("cart")
  favorite Product[] @relation("favorite")
}

model Product {
  id            String   @id @default(uuid())
  author        User?    @relation("cart", fields: [authorId], references: [id], onDelete: Cascade)
  authorId      String?
  favorite      User?    @relation("favorite", fields: [favoriteId], references: [id], onDelete: Cascade)
  favoriteId    String?
  previewSrc    String
  previewImages String[]
  title         String
  description   String
  price         Int
  stock         Int
  size          String
  type          String
  category      String
  createdAt     DateTime @default(now())
}
